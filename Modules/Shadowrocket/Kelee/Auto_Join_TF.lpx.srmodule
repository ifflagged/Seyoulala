#!date=2025-05-13 15:17:08

[Rule]
DOMAIN,testflight.apple.com,PROXY

[Script]
获取账号令牌 = type=http-request, pattern=^https?:\/\/testflight\.apple\.com\/v3\/accounts\/.*\/apps$, script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF.lpx/TF_keys.js

应用ID捕获 = type=http-request, pattern=^https://testflight.apple.com/join/(.*), script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF.lpx/TF_keys.js

自动加入TF = type=cron, cronexp={TimingParameters}, script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF.lpx/Auto_join_TF.js, timeout=180

[MITM]
hostname = %APPEND% testflight.apple.com

