[Rule]
# 📍 Country Code
DOMAIN,gspe1-ssl.ls.apple.com,DIRECT

[Script]
# 📍 Country Code
📍 Location.pep.gcc.response = type=http-response, pattern=^https?:\/\/gspe1-ssl\.ls\.apple\.com\/pep\/gcc, script-path=https://github.com/ifflagged/Seyoulala/raw/main/Modules/JS/NSRingo/iRingo.Location/response.bundle.js, requires-body=true, argument=PEP.GCC={{{GeoCountryCode}}}

[MITM]
hostname = %APPEND% gspe1-ssl.ls.apple.com

