[Argument]
Home.Tab = input,"直播tab,推荐tab,hottopic,bangumi,anime,film,koreavtw",tag=[首页] 标签页,desc=请选择启用的首页标签页，建议不超过7个。
Home.Tab_default = select,"推荐tab","直播tab","hottopic","bangumi","anime","film","koreavtw","game","mctab","dhtr","gaoxiao","school","kj",tag=[首页] 默认标签页,desc=请选择启动APP时默认展示的标签页，需选择已启用的标签页。
Home.Top_left = select,"mine","videoshortcut",tag=[首页] 顶栏（左侧）按钮（用户头像）,desc=请选择顶栏（左侧）按钮（用户头像）的作用（在biliBili粉色版中无法修改）。
Home.Top = input,"消息Top",tag=[首页] 顶栏（右侧）按钮,desc=请选择启用的顶栏（右侧）按钮。
Bottom = input,"home,dynamic,ogv,会员购Bottom,我的Bottom",tag=[底部] 导航栏按钮,desc=请选择启用的底部导航栏按钮，最多6个。
LogLevel = select,"WARN","OFF","ERROR","INFO","DEBUG","ALL",tag=[调试] 日志等级,desc=选择脚本日志的输出等级，低于所选等级的日志将全部输出。

[Script]
http-response ^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/resource\/show\/tab\/v2\? requires-body=1, script-path=https://github.com/ifflagged/Seyoulala/raw/main/Modules/JS/BiliUniverse/BiliBili.Enhanced/response.bundle.js, tag=📺 BiliBili.Enhanced.x.resource.show.tab.v2, argument=[{Home.Tab},{Home.Tab_default},{Home.Top_left},{Home.Top},{Bottom},{LogLevel}]
http-response ^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/v2\/account\/mine(\/ipad)?\? requires-body=1, script-path=https://github.com/ifflagged/Seyoulala/raw/main/Modules/JS/BiliUniverse/BiliBili.Enhanced/response.bundle.js, tag=📺 BiliBili.Enhanced.x.v2.account.mine, argument=[{Home.Tab},{Home.Tab_default},{Home.Top_left},{Home.Top},{Bottom},{LogLevel}]
http-response ^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/v2\/region\/index\? requires-body=1, script-path=https://github.com/ifflagged/Seyoulala/raw/main/Modules/JS/BiliUniverse/BiliBili.Enhanced/response.bundle.js, tag=📺 BiliBili.Enhanced.x.v2.region.index, argument=[{Home.Tab},{Home.Tab_default},{Home.Top_left},{Home.Top},{Bottom},{LogLevel}]
http-response ^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/v2\/channel\/region\/list\? requires-body=1, script-path=https://github.com/ifflagged/Seyoulala/raw/main/Modules/JS/BiliUniverse/BiliBili.Enhanced/response.bundle.js, tag=📺 BiliBili.Enhanced.x.v2.channel.region.list, argument=[{Home.Tab},{Home.Tab_default},{Home.Top_left},{Home.Top},{Bottom},{LogLevel}]

[MitM]
hostname = app.bilibili.com, app.biliapi.net
